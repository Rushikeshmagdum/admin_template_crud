<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Title Page-->
    <title>Dashboard</title>
    <%include ../partials/head%>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <%include ../partials/headerMobile.ejs%>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <%include ../partials/sideMenu.ejs%>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%include ../partials/headerDesktop.ejs%>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-info text-white">
                                        <h4 class="text-white">Manage Users</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12 text-right">
                                                <a href="/manageUsers/create" class="btn btn-primary text-white"><i class="fa fa-plus"></i> &nbsp;Create User</a>
                                            </div>
                                        </div>
                                        <div class="table table-responsive mt-4">
                                            <table class="table table-bordered table-striped text-center text-nowrap">
                                                <thead>
                                                    <tr class="bg-primary text-white">
                                                        <th>#</th>
                                                        <th>First Name</th>
                                                        <th>Last Name</th>
                                                        <th>Email</th>
                                                        <th>Contact</th>
                                                        <th>Action</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <%for(let i=0; i<users.length; i++){%>
                                                        <tr>
                                                            <td><%- i+1 %></td>
                                                            <td><%- users[i].firstName%></td>
                                                            <td><%- users[i].lastName%></td>
                                                            <td><%- users[i].email%></td>
                                                            <td><%- users[i].contact%></td>
                                                            <td>
                                                                <a class="btn btn-warning text-white" href="/manageUsers/edit/<%-users[i]._id%>"><i class="fa fa-edit"></i></a>
                                                                <a class="btn btn-danger text-white" href="/manageUsers/delete/<%-users[i]._id%>"><i class="fa fa-trash"></i></a>
                                                            </td>
                                                        </tr>
                                                        <%}%>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

    <%include ../partials/bodyScripts.ejs%>

</body>

</html>
<!-- end document-->
