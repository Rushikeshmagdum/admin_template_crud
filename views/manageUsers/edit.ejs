<!DOCTYPE html>
<html lang="en">

<head>

    <!-- Title Page-->
    <title>Dashboard</title>
    <%include ../partials/head%>

</head>

<body class="animsition">
    <div class="page-wrapper">
        <!-- HEADER MOBILE-->
        <%include ../partials/headerMobile.ejs%>
        <!-- END HEADER MOBILE-->

        <!-- MENU SIDEBAR-->
        <%include ../partials/sideMenu.ejs%>
        <!-- END MENU SIDEBAR-->

        <!-- PAGE CONTAINER-->
        <div class="page-container">
            <!-- HEADER DESKTOP-->
            <%include ../partials/headerDesktop.ejs%>
            <!-- HEADER DESKTOP-->

            <!-- MAIN CONTENT-->
            <div class="main-content">
                <div class="section__content section__content--p30">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header bg-warning text-white">
                                        <h4 class="text-white">Edit User</h4>
                                    </div>
                                    <div class="card-body">
                                        <div class="row">
                                            <div class="col-12 text-right">
                                                <a href="/manageUsers" class="btn btn-success text-white"><i class="fa fa-users"></i> &nbsp;Manage Users</a>
                                            </div>
                                        </div>
                                        <div class="col-12 mt-4">
                                            <form method="POST" action="/manageUsers/edit">
                                                <div class="form-row">
                                                    <div class="form-group col-6">
                                                        <label>First Name</label>
                                                        <input class="form-control" name="firstName" id="firstName" value="<%-user.firstName%>" required>
                                                        <input type="hidden" class="form-control" name="_id" id="_id" value="<%-user._id%>" required>
                                    
                                        
                                                    </div>
                                                    <div class="form-group col-6">
                                                        <label>Last Name</label>
                                                        <input class="form-control" name="lastName" id="lastName "  value="<%-user.lastName%>" required>                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-6">
                                                        <label>Contact</label>
                                                        <input class="form-control" name="contact" id="contact"  value="<%-user.contact%>" required>
                                                    </div>
                                                    <div class="form-group col-6">
                                                        <label>Email</label>
                                                        <input class="form-control" name="email" id="email"  value="<%-user.email%>" required>
                                                    </div>
                                                </div>
                                                <div class="form-row">
                                                    <div class="form-group col-6">
                                                        <label>Password</label>
                                                        <input class="form-control" name="password" id="password"  value="<%-user.password%>" required>
                                                    </div>
                                                    <div class="form-group col-6">
                                                        <label>Confirm Password</label>
                                                        <input class="form-control" name="confirmPassword" id="confirmPassword"  value="<%-user.password%>" required>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-12 text-center">
                                                        <button class="btn btn-warning text-center text-white"><i class="fa fa-save"></i> &nbsp;Save</button>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        
                    </div>
                </div>
            </div>
            <!-- END MAIN CONTENT-->
            <!-- END PAGE CONTAINER-->
        </div>

    </div>

    <%include ../partials/bodyScripts.ejs%>

</body>

</html>
<!-- end document-->
